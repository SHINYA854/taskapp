<h1>タスク詳細</h1>
<div class="row">
 <div class="col-md-10 col-md-offset-1">
  <table class="table table-bordered" id="table-task">
   <tbody>
    <tr>
      <th>ID</th>
      <td><%= @task.id %></td>
    </tr>
    <tr>
      <th>名称</th>
      <td><%= @task.task_title %></td>
    </tr>
    <tr>
      <th>詳細</th>
      <td><%= text_url_to_link(h(@task.task_content)).html_safe %></td>
    </tr>
    <tr>
      <th>作成日</th>
      <td><%= @task.created_at %></td>
    </tr>
    <tr>
      <th>更新日</th>
      <td><%= @task.updated_at %></td>
    </tr>
   </tbody> 
  </table> 
   <div>
    <%= link_to '編集', edit_user_task_path(current_user, @task.id), class: "btn btn-success" %>
    <%= link_to '削除', user_task_path(current_user, @task.id), method: :delete, class: "btn btn-danger" %>
   </div>  
 </div>  
</div>  
    
   
          
        
       
        
  
 

